<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_layout" />

        <EditText
            android:id="@+id/note_edit_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y40"
            android:layout_margin="@dimen/x20"
            android:background="@null"
            android:hint="@string/note_set_title_hint"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/edittext_hint_color"
            android:textSize="@dimen/text_size_18_sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y6"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5"
            android:background="@drawable/view_dash_bg"
            android:layerType="software" />

        <EditText
            android:id="@+id/note_edit_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/x20"
            android:background="@null"
            android:gravity="start|top"
            android:hint="@string/note_set_content_hint"
            android:textColor="@color/note_text_default_color"
            android:textColorHint="@color/edittext_hint_color"
            android:textSize="@dimen/note_text_default_size" />
    </LinearLayout>
</layout>